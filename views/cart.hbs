<div class="container">
    {{#if alert}}
        <h1>{{alert}}</h1>
    {{else}}
        <div class="section white">
            <div class="row container">
                <h2 class="header">Ваши товары:</h2>
            </div>
        </div>
        <table class="centered">
            <thead>
            <tr>
                <th>Продукт</th>
                <th>Количество</th>
                <th>Цена</th>
            </tr>
            </thead>

            <tbody>
        {{#each products}}
            {{#each this}}
            <tr>
                <td>{{this.name}}</td>
                <td><form method="post" action="/cart/minus/{{this.id}}">
                    <input id="id" name="id" type="number" value="{{this.id}}" hidden>
                    <button type="submit" class="btn btn-primary"><i class="material-icons left">exposure_neg_1</i></button>
                </form>{{this.count}}<form method="post" action="/cart/add/{{this.id}}">
                    <input id="id" name="id" type="number" value="{{this.id}}" hidden>
                    <button type="submit" class="btn btn-primary"><i class="material-icons left">exposure_plus_1</i></button>
                </form></td>
                <td>{{this.newPrice}} Р<form method="post" action="/cart/delete/{{this.id}}">
                    <input id="id" name="id" type="number" value="{{this.id}}" hidden>
                    <button type="submit" class="btn btn-danger"><i class="material-icons left">delete_forever</i></button>
                </form></td>
            </tr>
            {{/each}}
        {{/each}}
            </tbody>
        </table>
        <br>
        <h2 class="right">Итого: {{allPrice}} Р</h2>
        <br>
        <br>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">person_outline</i>
                        <input id="icon_prefix" type="text" class="validate" name="name" required>
                        <label for="icon_prefix">Имя</label>
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">phone</i>
                        <input id="icon_telephone" type="tel" class="validate" name="tel" required>
                        <label for="icon_telephone">Телефон</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s8">
                        <i class="material-icons prefix">streetview</i>
                        <input id="icon_prefix" type="text" class="validate" name="street" required>
                        <label for="icon_prefix">Улица</label>
                    </div>
                    <div class="input-field col s2">
                        <i class="material-icons prefix">domain</i>
                        <input id="icon_telephone" type="text" class="validate" name="home" required>
                        <label for="icon_telephone">Дом</label>
                    </div>
                    <div class="input-field col s2">
                        <i class="material-icons prefix">format_list_numbered</i>
                        <input id="icon_telephone" type="number" class="validate" name="flat" required>
                        <label for="icon_telephone">Квартира</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="centered"><form method="post" action="/cart/order">
            <button type="submit" class="btn btn-success">Оформить заказ</button>
        </form></div>
        {{/if}}

</div>
